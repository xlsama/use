[
  {
    "key": "cmd+w",
    "command": "-workbench.action.closeWindow"
  },
  {
    "key": "cmd+e",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "cmd+i",
    "command": "editor.action.triggerSuggest"
  },
  {
    "key": "shift+cmd+a",
    "command": "workbench.view.scm"
  },
  {
    "key": "cmd+shift+n",
    "command": "workbench.action.newWindowTab"
  },
  {
    "key": "shift+cmd+j",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  {
    "key": "cmd+g",
    "command": "workbench.action.quickTextSearch"
  },
  {
    "key": "cmd+m",
    "command": "workbench.action.toggleMaximizedPanel"
  },
  {
    "key": "ctrl+r",
    "command": "workbench.action.openRecent"
  },
  {
    "key": "cmd+r",
    "command": "git.refresh"
  },
  {
    "key": "cmd+d",
    "command": "git.viewChanges"
  },
  {
    "key": "cmd+t",
    "command": "git.openFile"
  },
  {
    "key": "cmd+t",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  // fix vscode neovim tab not working in normal mode
  {
    "key": "tab",
    "command": "-vscode-neovim.send",
    "when": "neovim.init && neovim.recording || editorTextFocus && neovim.init && neovim.mode != 'insert' && editorLangId not in 'neovim.editorLangIdExclusions'"
  },
  {
    "key": "tab",
    "command": "vscode-neovim.send",
    "when": "neovim.init && neovim.recording || editorTextFocus && neovim.init && neovim.mode != 'insert' && editorLangId not in 'neovim.editorLangIdExclusions' && !inlineEditIsVisible",
    "args": "<Tab>"
  }
]
