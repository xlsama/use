{
  "colorize_brackets": true,
  "use_smartcase_search": true,
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "hover_popover_delay": 50,
  "confirm_quit": true,
  "ui_font_size": 14,
  "buffer_font_size": 13.0,
  "buffer_font_family": "Maple Mono Normal NF CN",
  "ui_font_family": "Maple Mono Normal NF CN",
  "sticky_scroll": {
    "enabled": true
  },
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5"
    },
    "always_allow_tool_actions": true
  },
  "agent_ui_font_size": 13.0,
  "agent_buffer_font_size": 13.0,
  "edit_predictions": {
    "disabled_globs": []
  },
  "theme": "One Dark Pro",
  "icon_theme": "Catppuccin Mocha",
  "terminal": {
    "font_size": 11.0,
    "font_family": "Maple Mono Normal NF CN",
    "cursor_shape": "bar",
    "blinking": "on",
    "env": {
      "GIT_EDITOR": "zed --wait"
    }
  },
  "project_panel": {
    "default_width": 350,
    "entry_spacing": "standard"
  },
  "git_panel": {
    "button": true,
    "default_width": 350
  },
  "outline_panel": {
    "button": true,
    "default_width": 350
  },
  "notification_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "minimap": {
    "show": "always"
  },
  "use_system_window_tabs": true,
  "use_system_path_prompts": true,
  "auto_indent_on_paste": true,
  "linked_edits": true,
  "ensure_final_newline_on_save": true,
  "tab_size": 2,
  "preferred_line_length": 100,
  "vim_mode": true,
  "status_bar": {
    "active_language_button": true,
    "cursor_position_button": false
  },
  "when_closing_with_no_tabs": "keep_window_open",

  // files
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.jj",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings"
  ],
  "file_types": {
    "Fish": ["*Brewfile", "*.conf"]
  },

  // format
  "format_on_save": "on",
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 100
  },

  // languages
  "languages": {
    "JavaScript": {
      "formatter": [{ "code_action": "source.fixAll" }, "prettier"]
    },
    "TypeScript": {
      "language_servers": ["tsgo", "vtsls"],
      "formatter": [{ "code_action": "source.fixAll" }, "prettier"]
    },
    "Vue.js": {
      "formatter": [{ "code_action": "source.fixAll" }, "prettier"]
    },
    "Svelte": {
      "formatter": [{ "code_action": "source.fixAll" }, "prettier"]
    },
    "Python": {
      "language_servers": ["ty", "!basedpyright", "..."]
    },
    "Fish": {
      "formatter": {
        "external": {
          "command": "fish_indent"
        }
      }
    }
  },

  // lsp
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cva", "cx", "cn", "clsx"],
        "experimental": {
          "classRegex": ["[cls|className|ui]\\s\\:\\=\\s\"([^\"]*)"]
        }
      }
    }
  },

  // mcp
  "context_servers": {
    "mcp-server-context7": {
      "enabled": true,
      "settings": {
        "context7_api_key": "ctx7sk-8848a459-15de-4da8-8a14-4cc066dc9540"
      }
    },
    "nuxt-ui": {
      "enabled": true,
      "command": "npx",
      "args": ["mcp-remote", "https://ui.nuxt.com/mcp"],
      "env": {}
    }
  },

  "auto_install_extensions": {
    "basher": true,
    "comment": true,
    "catppuccin-icons": true,
    "dart": true,
    "docker-compose": true,
    "dockerfile": true,
    "emmet": true,
    "fish": true,
    "git-firefly": true,
    "html": true,
    "kotlin": true,
    "log": true,
    "lua": true,
    "mcp-server-context7": true,
    "nginx": true,
    "one-dark-pro": true,
    "scss": true,
    "sql": true,
    "svelte": true,
    "swift": true,
    "toml": true,
    "vue": true,
    "xml": true
  }
}
